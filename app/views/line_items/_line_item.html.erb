<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>


<td><%= line_item.product.title %> &nbsp
  <%= button_to "", line_item_reduce_path(:id => line_item), class: 'button_minus', title: 'Уменьшить количество' %>
  <%= line_item.quantity %>
  <%= button_to "", line_item_add_path(:id => line_item), class: 'button_plus', title: 'Увеличить количество' %>
  </td>
<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
<td><%= link_to fa_icon('trash-o'), line_item_path(line_item),
                method: :delete, data: {confirm: 'Вы уверены?'} %></td>
</tr>
