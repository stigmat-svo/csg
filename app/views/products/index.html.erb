<div class="list">
  <p id="notice"><%= notice %></p>

  <h1>Список товаров</h1>

  <table>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(product.image_url, class: 'list_image', title: 'Аватар отсутствует.') %>
        </td>

        <td class="list_description">
          <dl>
            <dt><%= product.title %></dt>
            <br>
            <dt><%= truncate(strip_tags(product.description), length: 80) %></dt>
            <br>
            <dt><%= number_to_currency(product.price) %></dt>
          </dl>
        </td>

        <td class="list_actions">
          <%= link_to 'Показать', product %>
          <br>
          <%= link_to 'Редактировать', edit_product_path(product) %>
          <br>
          <%= link_to 'Удалить', product, method: :delete, data: {confirm: 'Вы уверены?'} %>
        </td>
      </tr>
    <% end %>
  </table>
  <br>
 <p><%= link_to 'Добавить', new_product_path %></p>
  <p><%= link_to 'На главную', store_index_path %></p>
</div>

